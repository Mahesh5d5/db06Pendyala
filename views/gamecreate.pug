extends layout

block content
 h1= title
 form(id='GameForm', action="/resource/game", method="POST")
    div.form-group
    div(class="row g-3 align-items-center")
      div(class="col-1")
         label.gameAttr(for='designer',class="col-form-label") Game designer
      div(class="col-auto")
         input#designer(type='text', name='designer',class="form-control")
    div.form-group
    div(class="row g-3 align-items-center")
      div(class="col-1")
         label.gameAttr(for='price', class="col-form-label") Game price
      div(class="col-auto")
         input#price(type='number', name='price',class="form-control")
    div.form-group
    div(class="row g-3 align-items-center")
      div(class="col-1")
         label.gameAttr(for='size',class="col-form-label") Game size
      div(class="col-auto")
         input#size(type='number', name='size',class="form-control")
    input(type="submit",class="btn btn-primary")
 script.
    document.forms['GameForm'].addEventListener('submit', (event) => {
    event.preventDefault();
    // TODO do something here to show user that form is being submitted
    fetch(event.target.action, {
    method: 'POST',
    body: new URLSearchParams(new FormData(event.target)) // event.target is the form
    }).then((resp) => {
    return resp.json(); // or resp.text() or whatever the server sends
    }).then((body) => {
    alert("Save succeded")
    // TODO handle body
    }).catch((error) => {
    // TODO handle error
    alert("Save failed " + error )
    });
    });